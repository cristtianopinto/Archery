@{ 
    var user = Session["USER"] as Archery.Models.Archer;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Archery</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>
<body>
    <header class="page-header">
        <h1>Archery</h1>
    </header>

    <nav class="navbar navbar-default ">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("index","home")">Accueil</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.RouteUrl("AboutRoute")">A propos</a>
                    </li>

                </ul>
                <ul class="nav navbar-nav navbar-right">                    
                    <li><a href="@Url.Action("index","dashboard", new { area="backoffice"})">Back-Office</a></li>
                </ul>
                <ul class="nav navbar-nav">
                    @if (user == null)
                    {
                    <form class="navbar-form navbar-right" method="post" action="@Url.Action("login", "authenticationuser")">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <input type="text" name="mail" class="form-control" placeholder="Login">
                            <input type="password" name="password" class="form-control" placeholder="Mot de passe" />
                        </div>
                        <button type="submit" class="btn btn-info">OK</button>
                    </form>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("subscribe", "archers")">Inscription</a></li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav">
                            <h4>Bonjour @user.FirstName @user.LastName</h4>
                            <a href="@Url.Action("logout", "authenticationuser")"><i class="glyphicon glyphicon-log-out"></i></a>
                        </ul>
                    }
                </ul>



            </div><!-- /.container-fluid -->
        </div>
    </nav>

    <div class="container">
        <div class="container">
            @*
                @GestionMessage(TempData["typeMessage"] as string)
            *@
            @Html.Partial("_PartialDisplay")

            @RenderBody()

        </div>
    </div>
    <footer class="panel-footer">
        &copy; 2018
    </footer>
    
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("SectionScripts", false)<!--defini a obrigatoriedade -->
</body>
</html>


