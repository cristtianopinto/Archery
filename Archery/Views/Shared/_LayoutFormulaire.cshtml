
@{
    ViewBag.Title = "_LayoutFormulaire";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{ 
    @Html.AntiForgeryToken()    
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.TitleFormulaire </div>
        <div class="panel-body">

            @RenderSection("Formulaire", false)<!--defini a obrigatoriedade -->

        </div>
    </div>
}
@section SectionScripts{
    <script src="~/Scripts/jquery.validate.min.js"></script><!--Para fazer a validacao de campos no lado cliente -->
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script><!--Para fazer a validacao de campos no lado cliente -->
}
